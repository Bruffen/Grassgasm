<?xml version="1.0" ?>
<project name="Terrain" width = "1280" height = "720">
    <assets>
		
		<scenes>
			<scene name = "plane">
				<geometry name = "plane" type = "GRID" DIVISIONS=10 LENGTH=5 >
				</geometry> 
			</scene>
        </scenes>
        
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>	
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value= 0.1/>
				<FAR value= 100/>
				<POSITION x=-1.914014 y=0.492289 z=1.460414 />
				<VIEW x=0.810088 y=-0.208939 z=-0.547815 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x=2 y=-1 z=-2 />
			</light>
		</lights>		
		<materialLibs>
			<materialLib filename="materials/plane.mlib" />
		</materialLibs>
	</assets>


    <pipelines >
		<pipeline name="Plane">
			<pass class="default" name="planeRender">
				<scenes>
					<scene name="plane" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial ="planeHeight" fromLibrary="Plane" />
					</map>
				</injectionMaps>
			</pass>
		</pipeline>
	</pipelines>
</project>