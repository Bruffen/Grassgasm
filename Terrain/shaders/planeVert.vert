float mynoise(vec2 points){
  float seed = 100;
  points = points;
  return (
           1* perlin((points),1,seed + 200)
          +0.5*perlin((points*2),1,seed - 200)
          +0.25*perlin((points*(4,2)),1,seed + 500)
          )/6;
}



